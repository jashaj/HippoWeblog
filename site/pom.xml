                        WEB-INF/lib/jdo2-api-${jdo.version}.jar,
                        WEB-INF/lib/hst-api-${hst.version}.jar,
                        WEB-INF/lib/hst-commons-${hst.version}.jar</excludes>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>update hst-config</id>
                <phase>install</phase>
                <configuration>
                  <tasks>
                    <replace file="${tomcat.server.home}/webapps/${project.build.finalName}/WEB-INF/hst-config.properties">
                      <replacefilter token="#hstconfigreader.repository.address = vm://" value="hstconfigreader.repository.address = vm://" />
                      <replacefilter token="#binaries.repository.address = vm://" value="binaries.repository.address = vm://" />
                      <replacefilter token="#default.repository.address = vm://" value="default.repository.address = vm://" />
                      <replacefilter token="#writable.repository.address = vm://" value="writable.repository.address = vm://" />
                      <replacefilter token="hstconfigreader.repository.address = rmi://" value="#hstconfigreader.repository.address = rmi://" />
                      <replacefilter token="binaries.repository.address = rmi://" value="#binaries.repository.address = rmi://" />
                      <replacefilter token="default.repository.address = rmi://" value="#default.repository.address = rmi://" />
                      <replacefilter token="writable.repository.address = rmi://" value="#writable.repository.address = rmi://" />
                    </replace>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    
