                    <artifactItem>
                      <groupId>org.onehippo.forge.weblogdemo</groupId>
                      <artifactId>weblogdemo-site</artifactId>
                      <version>${project.version}</version>
                      <type>war</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>${tomcat.server.home}/webapps/${project.build.finalName}</outputDirectory>
                      <!-- Excludes shared libs -->
                      <excludes>WEB-INF/lib/geronimo-jta_1.1_spec-${jta.version}.jar,
